[Container]
Environment=POSTGRES_DB=monitor POSTGRES_USER=monitor POSTGRES_INITDB_ARGS=--data-checksums
HealthCmd=pg_isready -U monitor -d monitor
HealthInterval=30s
HealthRetries=3
HealthStartPeriod=40s
HealthTimeout=10s
Image=docker.io/postgres:17-alpine
Network=monitor.network
Secret=nostrich-watch-db-password,type=env,target=POSTGRES_PASSWORD
PublishPort=5432:5432
Volume=postgres_data.volume:/var/lib/postgresql/data

[Service]
Restart=always

[Install]
WantedBy=default.target
